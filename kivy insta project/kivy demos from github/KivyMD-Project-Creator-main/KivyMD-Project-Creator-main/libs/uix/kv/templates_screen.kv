<TemplatesScreen>

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Select Your Template"
            anchor_title: "center"
            md_bg_color: self.theme_cls.bg_normal
            left_action_items: [["arrow-left", lambda x: root.change_to_home()]]
            right_action_items: [["arrow-right", lambda x: root.change_to_get_details()]]

        ScrollView:

            MDGridLayout:
                id: container
                cols: 3
                padding: dp(20)
                spacing: dp(20)
                adaptive_height: True

                CustomImage:
                    name: "empty"
                CustomImage:
                    name: "basic"
                CustomImage:
                    name: "bottom-navigation"
                CustomImage:
                    name: "tab"
                CustomImage:
                    name: "navigation-drawer"
                CustomImage:
                    name: "backdrop"

<CustomImage>
    orientation: "vertical"
    adaptive_height: True
    allow_no_selection: False
    group: "activites"
    spacing: dp(10)
    padding: dp(5)

    canvas:
        Color:
            rgba:
                (0, 0, 0, 0) if not self.use_toggle_behavior \
                else \
                (0, 0, 0, 0) if self.state == "normal" \
                else self.theme_cls.primary_dark
        RoundedRectangle:
            pos: self.pos
            size: self.size

    canvas.before:
        Color:
            rgba:
                self.theme_cls.bg_dark if self.hovering \
                and self.use_toggle_behavior \
                else (0, 0, 0, 0)
        RoundedRectangle:
            pos: self.pos
            size: self.size

    Image:
        source: "assets/images/templates/" + root.name + ".png"
        size_hint_y: None
        height: dp(340)

    CustomLabel:
        text: (root.name).title()
        halign: "center"
        font_style: "H6" if root.use_toggle_behavior else "Body1"
